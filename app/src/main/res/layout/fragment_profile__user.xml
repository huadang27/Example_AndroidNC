    <Button
        android:id="@+id/bt_sign_out"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_button"
        android:text="sign out"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginTop="328dp"

        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_infor_mail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custombg_infor"
            android:drawableStart="@drawable/_586360_email_envelope_mail_send_icon__1_"
            android:drawablePadding="20dp"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="huadang131@gmail.com"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_infor_phone"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/custombg_infor"
            android:drawableStart="@drawable/_72517_phone_icon"
            android:drawablePadding="20dp"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="0981073516"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_infor_edit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/custombg_infor"
            android:drawableStart="@drawable/edit"
            android:drawablePadding="20dp"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="visible" />
        <Button
            android:id="@+id/bt_infor_edit2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@drawable/custombg_infor"
            android:drawableStart="@drawable/edit"
            android:drawablePadding="20dp"
            android:elevation="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="demo"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>